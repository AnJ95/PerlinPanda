					COLOR = vec4(0.89, 0.85, 0.4, max(COLOR.a, min(texture(TEXTURE, UV + vec2(x,y) / texture_h).a, 1f-redness(texture(TEXTURE, UV + vec2(x,y) / texture_h)))));
					
	if (mask >= 1f && mask_descend <= 0f)
